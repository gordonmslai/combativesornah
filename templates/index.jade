                    var s = '<form name="input" action="/index" method="GET"><input type="submit" value="Jump to Current" class="btn_curr"></form>';
                        document.getElementById("buttonnow").innerHTML = s;
                }

            }

            function time_stuff() {
                showbuttons();
                display_ct();
                var a = "{{curr}}";
                if (a != "None") {
                    display_c1({{curr.time_left_sec}});
                }
            }
